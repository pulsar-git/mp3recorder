    <PreferenceCategory android:title="@string/advanced_category">
        <ListPreference
            android:entries="@array/recording_frequency"
            android:entryValues="@array/recording_frequency_values"
            android:key="AUDIO_FREQ"
            android:title="@string/rec_frequency_tile"
            android:summary="@string/rec_frequency_desc"
            android:defaultValue="@string/default_frequency"
            />
        <ListPreference
            android:entries="@array/source"
            android:entryValues="@array/source_values"
            android:key="AUDIO_SOURCE"
            android:title="@string/source_title"
            android:summary="@string/source_desc"
            android:defaultValue="@string/default_source"
            />
        <ListPreference
            android:entries="@array/audio_channel"
            android:entryValues="@array/audio_channel_values"
            android:key="AUDIO_CONFIG"
            android:title="@string/channel_title"
            android:summary="@string/channel_desc"
            android:defaultValue="@string/default_channel"
            />
        <ListPreference
            android:entries="@array/encoding"
            android:entryValues="@array/encoding_values"
            android:key="AUDIO_FORMAT"
            android:title="@string/encoding_title"
            android:summary="@string/encoding_desc"
            android:defaultValue="@string/default_encoding"
            />
    </PreferenceCategory>
