<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" android:title="@string/pref_title">
     <PreferenceCategory android:title="@string/interface_category">
         <ListPreference
            android:entries="@array/bitrate_array"
            android:entryValues="@array/bitrate_array_values"
            android:key="MP3_BRATE"
            android:title="@string/bitrate_title"
            android:summary="@string/bitrate_desc"
            android:defaultValue="@string/default_bitrate"
            />
          <ListPreference
            android:entries="@array/mp3_quality"
            android:entryValues="@array/mp3_quality_values"
            android:key="MP3_QUALITY"
            android:title="@string/mp3_quality_title"
            android:summary="@string/mp3_quality_desc"
            android:defaultValue="@string/default_quality"
            />
     </PreferenceCategory>
