<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hilifes.hirecordmp3.free"
    android:versionCode="11"
    android:versionName="1.1.1" >

    <uses-sdk android:minSdkVersion="9" android:targetSdkVersion="19"/>
    
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
 	<uses-permission android:name="android.permission.RECORD_AUDIO" />
 	<uses-permission android:name="android.permission.WAKE_LOCK" />
 	 
 	 <!-- ADS API -->
 	<uses-permission android:name="android.permission.INTERNET"/>
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
 	
 	

    <application
        android:icon="@drawable/ic_micro"
        android:label="@string/app_name" 
        android:allowBackup="true">
        <activity
            android:name="LauncherActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <meta-data android:name="com.google.android.gms.version"
               android:value="@integer/google_play_services_version"/>

        
        <activity android:name="com.hilifes.record.HiRecordPrefActivity"></activity>
        <activity android:name="com.hilifes.record.HiRecordFileActivity"></activity>
        
        <activity android:name="com.hilifes.record.HiRecordPreferenceActivity"></activity>

        <!-- Google Ad Permission -->
        <activity android:name="com.google.android.gms.ads.AdActivity"
             android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"/>
	
        <service android:name="com.hilifes.record.HiRecordService" android:exported="false"/>
        <activity android:name="com.hilifes.hirecordmp3.free.FreeActivity"></activity>
        <activity android:name="com.hilifes.record.HiRecordMP3Activity"></activity>        
		  
    </application>

</manifest>